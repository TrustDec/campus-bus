.nav-item
		width: 100%
		height: 80px
		display: flex
		border-1px(rgba(7, 17, 27, 0.1))
		.nav-item-start
			width: 54px
			padding-top: 17px
			display: flex
			justify-content: center
			//align-items: center
			.nav-start
				width: 17px
				height: 17px
				border-radius: 17px
		&:first-child
			.nav-start
				background-color: #48cc85
		&:last-child
			.nav-start
				background-color: #fc858f
		.nav-item-details
			padding-top: 17px
			.nav-text
				font-size: 15px
				color: #666
			.nav-item-text
				display: block
				margin-bottom: 12px	
				.nav-text-start
					font-weight: 800
					color: #333
					&:first-child
						margin-right: 18px
			.nav-text-details-box
				display: block
				.nav-text-plate
					color: #999	
					&:first-child
						margin-right: 55px		